{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "baseUrl": ".",
    "module": "preserve",
    "paths": {
      "@schemasset/*": ["packages/*/src"]
    },
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "types",
    "isolatedDeclarations": true,
    "erasableSyntaxOnly": true,
    "skipLibCheck": true
  },
  "include": [
    "packages"
  ]
}
