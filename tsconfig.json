{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "esnext",
      "dom"
    ],
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "strict": true,
    "strictNullChecks": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "isolatedDeclarations": true,
    "skipLibCheck": true
  },
  "include": [
    "packages"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
